          <div class="discuss-list fourth">
          </div>
        </div>
      </div>
      <div class="rank-box">
        <div class="tag">排行榜</div>
        <div class="rank-content">
          <div class="rank-button-wrapper">
            <button class="rank-button toggle" data-id="coin">金幣數</button>
            <button class="rank-button" data-id="quests">解題數</button>
            <button class="rank-button" data-id="post">發文數</button>
            <button class="rank-button" data-id="like">得讚數</button>
          </div>
          <div class="content-wrapper">
            <div class="content toggle" id="coin">
              <div class="rank-list-box">
                <div class="rank-list coin-1">
                </div>
                <div class="rank-list coin-2">
                </div>
                <div class="rank-list coin-3">
                </div>
              </div>
            </div>
            <div class="content" id="quests">
              <div class="rank-list-box">
                <div class="rank-list quests-1">
                </div>
                <div class="rank-list quests-2">
                </div>
                <div class="rank-list quests-3">
                </div>
              </div>
            </div>
            <div class="content" id="like">
