<div class="user-index-container">
  <div class="home-box">
    <div class="skill-box">
      <div class="skill-ruby">
        <h2>RUBY</h2>
        <div class="progress-bar">
        </div>
        <span class="percent"></span>
        <button class="start-button solid-button"><a href="/quests">開始測驗</a></button>
      </div>
    </div>
    <div class="social-box">
      <div class="discuss-box">
        <div class="tag">討論區</div>
        <div class="discuss-list-box">
