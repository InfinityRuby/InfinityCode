
<div class="posts_container">
  <div class="posts_wrap">
    <h1 class="posts_h1">新增討論區內容</h1>
    
    <%= form_for(@post) do |f| %>
      <%= f.label :title, "標題" ,class: 'posts_label' %><br>
      <%= f.text_field :title , class: 'posts_input' %> <br>
    
      <%= f.label :content, "內容" ,class: 'posts_label' %><br>
      <%= f.text_area :content, class: 'posts_textarea' %> <br>
    
      <%= f.submit "更新討論區", class: 'posts_submit'  %>
    <% end %>
    
    <%= link_to '返回討論區列表', root_path, class: 'posts_home' %>
  </div>
</div>