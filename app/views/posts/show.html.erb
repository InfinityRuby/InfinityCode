<div id="poxt_content">
  <h1><%=@post.title%></h1>
  <p><%=@post.content%></p>

  <div id="comment">
    <h2><%= @post.comments.count %></h2>
    <%= render @post.comments %>

    <h3>回覆主題</h3>
    <%= render "comments/form" %>
  </div>
</div>


  <%= link_to '編輯', edit_post_path(@post) %>
  <%= link_to '刪除', post_path(@post), method: :delete , data: { confirm: "確定要刪除嗎?" } %>
  <%= link_to "Home", root_path %>