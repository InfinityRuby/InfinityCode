<div class="user-container">
  <section class="user-wrap">
    <h2>Forgot your password?</h2>
  
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
  
      <div class="field">
        <p class="user-inputtext"><%= f.label :email %></p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-input", placeholder: "EMAIL", size: 30 %>
      </div>
  
      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "user-submitbtn" %>
      </div>
    <% end %>
  
    <div class="user-sharelink"><%= render "devise/shared/links" %></div>
  </section>
</div>
